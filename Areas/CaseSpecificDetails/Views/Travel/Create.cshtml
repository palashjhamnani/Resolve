@model Resolve.Models.Travel

@{
    ViewData["Title"] = "Create Specific Details";
}


<h3>Create Travel Request</h3>
<hr />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelStartDate" class="control-label"></label>
                <input asp-for="TravelStartDate" class="form-control" />
                <span asp-validation-for="TravelStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelEndDate" class="control-label"></label>
                <input asp-for="TravelEndDate" class="form-control" />
                <span asp-validation-for="TravelEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label required-field"></label>
                <select asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}