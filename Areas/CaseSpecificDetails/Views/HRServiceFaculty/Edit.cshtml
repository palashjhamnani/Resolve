@model Resolve.Models.HRServiceFaculty

@{
    ViewData["Title"] = "Edit Specific Details";
}

@section Scripts {
   
    <script type="text/javascript">
           jQuery(document).ready(function ($) {
            var MyFacRequestType = "@Model.FacRequestType";
            if (MyFacRequestType == "Allowance") {
                $("#FacAllowanceChange").show();
            }
            else {
                $("#FacAllowanceChange").hide();
           }
            if (MyFacRequestType == "Base") {
                   $("#BasePayChange").show();
               }
            else {
                   $("#BasePayChange").hide();
           }
           if (MyFacRequestType == "Termination") {
               $("#TerminationReason").show();
               }
           else {
               $("#TerminationReason").hide();
           }
           if (MyFacRequestType == "FTE") {
               $("#FTEChange").show();
               }
           else {
               $("#FTEChange").hide();
           }
          
           if (MyFacRequestType == "Move") {
               $("#MoveWorker").show();
           }
           else {
               $("#MoveWorker").hide();
           }
          
            $("#FacRequestType").change(function () {
                if ($(this).find(':selected').text() == "Compensation Base Pay Change") {
                    $("#BasePayChange").show();
                    $("#FacAllowanceChange").hide();
                    $("#TerminationReason").hide();
                    $("#FTEChange").hide();
                    $("#MoveWorker").hide();
                } else if ($(this).find(':selected').text() == "Compensation Allowance Change") {
                    $("#FacAllowanceChange").show();
                    $("#BasePayChange").hide();
                    $("#TerminationReason").hide();
                    $("#FTEChange").hide();
                    $("#MoveWorker").hide();
                }
                else if ($(this).find(':selected').text() == "Termination") {
                    $("#TerminationReason").show();
                    $("#FacAllowanceChange").hide();
                    $("#BasePayChange").hide();
                    $("#FTEChange").hide();
                    $("#MoveWorker").hide(); $("#TerminationReason").show();
                }
                else if ($(this).find(':selected').text() == "FTE Change") {
                    $("#FTEChange").show();
                    $("#FacAllowanceChange").hide();
                    $("#BasePayChange").hide();
                    $("#TerminationReason").hide();
                    $("#MoveWorker").hide();

                }
                else if ($(this).find(':selected').text() == "Move Worker") {
                    $("#MoveWorker").show();
                    $("#FacAllowanceChange").hide();
                    $("#BasePayChange").hide();
                    $("#TerminationReason").hide();
                    $("#FTEChange").hide();

                }
                else {
                    $("#FacAllowanceChange").hide();
                    $("#BasePayChange").hide();
                    $("#TerminationReason").hide();
                    $("#FTEChange").hide();
                    $("#MoveWorker").hide();
                }
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

