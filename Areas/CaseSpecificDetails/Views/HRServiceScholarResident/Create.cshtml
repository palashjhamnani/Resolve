                    <input asp-for="ProposedFTE" class="form-control" />
                    <span asp-validation-for="ProposedFTE" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle" class="control-label required-field"></label>
                <input asp-for="JobTitle" class="form-control" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div id="Promotion">
                <div class="form-group">
                    <label asp-for="PropTitle" class="control-label"></label>
                    <input asp-for="PropTitle" class="form-control" />
                    <span asp-validation-for="PropTitle" class="text-danger"></span>
                </div>
            </div>
                <div class="form-group">
                    <label asp-for="Department" class="control-label required-field"></label>
                    <select asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label required-field"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BudgetNumbers" class="control-label"></label>
                    <input asp-for="BudgetNumbers" class="form-control" />
                    <span asp-validation-for="BudgetNumbers" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StepStipendAllowance" class="control-label"></label>
                    <input asp-for="StepStipendAllowance" class="form-control" />
                    <span asp-validation-for="StepStipendAllowance" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EffectiveStartDate" class="control-label required-field"></label>
                    <input asp-for="EffectiveStartDate" class="form-control" />
                    <span asp-validation-for="EffectiveStartDate" class="text-danger"></span>
                </div>
