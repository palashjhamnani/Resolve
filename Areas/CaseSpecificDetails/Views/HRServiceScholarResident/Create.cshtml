@model Resolve.Models.HRServiceScholarResident

@{
    ViewData["Title"] = "Create Specific Details";
}
@section Scripts {
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $("#Compensation").hide();
            $("#FTEChange").hide();
            $("#Promotion").hide();
            $("#ScholarRequestType").change(function () {
                if ($(this).find(':selected').text() == "Compensation Allowance Change") {
                    $("#Compensation").show();
                    $("#FTEChange").hide();
                    $("#Promotion").hide();
                }
                else if ($(this).find(':selected').text() == "FTE Change") {
                    $("#FTEChange").show();
                    $("#Compensation").hide();
                    $("#Promotion").hide();
                }
                else if ($(this).find(':selected').text() == "Promotion") {
                    $("#Promotion").show();
                    $("#Compensation").hide();
                    $("#FTEChange").hide();
                }
                else {
                    $("#Compensation").hide();
                    $("#FTEChange").hide();
                    $("#Promotion").hide();
                }
                
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

<h3>Create HR Service Request</h3>
<h4>Scholar/Resident</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ScholarRequestType" class="control-label required-field"></label>
                <select asp-for="ScholarRequestType" asp-items="Html.GetEnumSelectList<ScholarRequestType>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="ScholarRequestType" class="text-danger"></span>
            </div>
            <div id="Compensation">
                <div class="form-group">
                    <label asp-for="ScholarCompAllowanceChange" class="control-label"></label>
                    <select asp-for="ScholarCompAllowanceChange" asp-items="Html.GetEnumSelectList<ScholarCompAllowanceChange>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="ScholarCompAllowanceChange" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ScholarJobProfile" class="control-label required-field"></label>
                <select asp-for="ScholarJobProfile" asp-items="Html.GetEnumSelectList<ScholarJobProfile>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="ScholarJobProfile" class="text-danger"></span>
            </div>
            <div id="FTEChange">
                <div class="form-group">
                    <label asp-for="CurrentFTE" class="control-label"></label>
                    <input asp-for="CurrentFTE" class="form-control" />
                    <span asp-validation-for="CurrentFTE" class="text-danger"></span>
                </div>
                <div class="form-group">
