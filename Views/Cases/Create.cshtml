@model Resolve.Models.Case

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Case</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="LocalUserID" value=@User.Identity.Name />
            </div>
            <div class="form-group">
                <label asp-for="OnBehalfOf" class="control-label"></label>
                <input asp-for="OnBehalfOf" class="form-control" />
                <span asp-validation-for="OnBehalfOf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaseStatus" class="control-label"></label>
                <input asp-for="CaseStatus" class="form-control" />
                <span asp-validation-for="CaseStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Case Type</label>
                <select class="form-control" name="CTypeTitle" asp-items="ViewBag.CaseTypeTitle"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
